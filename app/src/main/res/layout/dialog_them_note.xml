<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textThemGC"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:text="THÊM GHI CHÚ"
        android:textSize="30sp"
        android:textColor="#7EC32F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="NHẬP GHI CHÚ"
        android:id="@+id/edittextThemGC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textThemGC"
        android:layout_marginTop="10dp"/>


    <Button
        android:background="#3484C3"
        android:padding="20dp"
        android:id="@+id/buttonThemNote"
        android:layout_below="@+id/edittextThemGC"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="THÊM"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonHuyNote"
        android:gravity="center"
        android:background="#3484C3"
        android:padding="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/buttonThemNote"
        android:layout_below="@+id/edittextThemGC"
        android:text="HỦY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>