<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textThemND"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:text="THÊM NỘI DUNG"
        android:textSize="30sp"
        android:textColor="#DFA857"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="NHẬP CÔNG VIỆC"
        android:id="@+id/edittextThemND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textThemND"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="#E4A84F"
        android:padding="20dp"
        android:id="@+id/buttonThemND"
        android:layout_below="@+id/edittextThemND"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="THÊM"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonHuyND"
        android:gravity="center"
        android:background="#E4A84F"
        android:padding="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/buttonThemND"
        android:layout_below="@+id/edittextThemND"
        android:text="HỦY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>