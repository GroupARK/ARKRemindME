<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:textStyle="italic"
        android:id="@+id/noteClick"
        android:layout_width="310dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/note"
        android:text="NOTE"
        android:textSize="40dp" />

    <Button
        android:textStyle="italic"
        android:background="@drawable/todolist"
        android:textColor="#03A9F4"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noteClick"
        android:text="TODO List"
        android:textSize="40dp"
        android:id="@+id/todoClick"
        android:layout_width="310dp"
        android:layout_height="120dp"/>

    <Button
        android:textStyle="italic"
        android:background="@drawable/task"
        android:textColor="#DA584E"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/todoClick"
        android:text="TASK"
        android:textSize="40dp"
        android:id="@+id/taskClick"
        android:layout_width="310dp"
        android:layout_height="120dp"/>

    <Button
        android:textStyle="italic"
        android:textColor="#5AC5D3"
        android:id="@+id/tagClick"
        android:textSize="40dp"
        android:text="TAG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/taskClick"
        android:layout_width="310dp"
        android:layout_height="120dp"/>




</RelativeLayout>